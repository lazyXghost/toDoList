<%- include('partials/header') -%>

    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <form action="/login" method="post">
                    <label for="username-login" class="form-label">Email</label>
                    <input type="email" id="username-login" name="username" class="form-control">
                    <label for="password-login" class="form-label">Password</label>
                    <input type="password" id="password-login" name="password" class="form-control">
                    <button type="submit" class="btn btn-lg btn-primary login-button" name="log"
                        value="login">Login</button>
                </form>
            </div>
            <!-- <div class="col-lg-4">
                <a href="auth/google" class="btn btn-lg btn-primary login-google btn-social btn-google"><i
                        class="fab fa-google"></i> | Login with google</a>
            </div> -->
        </div>
        <div class="row">
            <p class="error-message">
                <%= text %>
            </p>
        </div>
        <% if(text.length) { %>
            <p>Or</p>
            <a href="/register"><button class="btn btn-lg btn-primary login-button">Register</button></a>
            <% } %>
    </div>

    <%- include('partials/footer') -%>